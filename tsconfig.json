{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./dist",
		"typeRoots": [
			"node_modules/@types"
		],
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["src"],
	"exclude": [
		"node_modules",
		"**/*/*.spec.ts",
		"dist"
	]
}